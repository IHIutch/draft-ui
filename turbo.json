{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build-registry": {
      "cache": false
    },
    "build": {
      "outputs": ["storybook-static/**", ".next/**", "!.next/cache/**"]
    },
    "storybook": {},
    "lint": {},
    "check-types": {
      "dependsOn": ["^topo"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "topo": {
      "dependsOn": ["^topo"]
    }
  }
}
